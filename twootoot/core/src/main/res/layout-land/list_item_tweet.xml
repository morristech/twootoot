<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    card_view:cardCornerRadius="4dp"
                                    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/icon"/>

        <TextView
            android:id="@+id/userDisplayName"
            style="@style/TextAppearance.Tweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@id/profilePicture"
            android:fontFamily="sans-serif-medium"
            android:text="tmp"/>

        <TextView
            android:id="@+id/userName"
            style="@style/TextAppearance.Tweet"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/userDisplayName"
            android:fontFamily="sans-serif-light"
            android:text="\@AndroidDev"
            android:textColor="@color/textLightBlue"/>


        <TextView
            android:id="@+id/content"
            style="@style/TextAppearance.Tweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userDisplayName"
            android:layout_toRightOf="@id/profilePicture"
            android:fontFamily="sans-serif-light"
            android:text="Lorem ipsum dolor sit amet, lorum ipsum dolor sit amet. Dolor sit amet lorum."/>
    </RelativeLayout>
</android.support.v7.widget.CardView>